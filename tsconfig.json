{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}